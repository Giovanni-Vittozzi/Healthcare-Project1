<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/popper.js"></script>

</head>
<body>

    <div class="container">
        <div class="container-fluid">
            <img class="img-fluid" src="~/Images/Medical Banner2.png" />
        </div>

        <div class="container-fluid">
            <nav class="navbar navbar-expand-sm bg-light">

                <!-- Links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="~/Default/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Default/PatientInfoRegistration">Register as a new patient here</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Default/AddDoctorInfo">Register as a new doctor here</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Default/About">About</a>
                    </li>
                </ul>

            </nav>
        </div>

        <div class="container-fluid">

        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
        <footer class="container-fluid">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>